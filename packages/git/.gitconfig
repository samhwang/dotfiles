# CORE GIT CONFIGURATION
[alias]
	lol = log --graph --decorate --pretty=oneline --abbrev-commit
	lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
	co = checkout
	ci = commit
	st = status
	br = branch
	hist = log --pretty=format:"\"%h %ad | %s%d [%an]\"" --graph --date=short
	type = cat-file -t
	dump = cat-file -p
[branch]
	sort = -committerdate
[color]
	interactive = auto
	ui = true
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[column]
	ui = auto
[commit]
	verbose = true
[core]
	editor = $EDITOR
	excludesfile = ~/.gitexclude
	pager = delta --diff-so-fancy
	# fsmonitor = true
	# untrackedCache = true
[delta]
	plus-style = "syntax #012800"
	minus-style = "syntax #340001"
	navigate = true
	inspect-raw-lines = false
	line-numbers = true
	# side-by-side = true
	features = catppuccin-mocha
[fetch]
	prune = true
	pruneTags = true
	all = true
[help]
	autocorrect = prompt
[interactive]
	diffFilter = delta --color-only
[diff]
	algorithm = histogram
	colorMoved = plain
	renames = true
	mnemonicPrefix = true
[filter "hawser"]
	clean = git hawser clean %f
	smudge = git hawser smudge %f
	required = true
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
[init]
	defaultBranch = master
	templateDir = ~/.git-template
[merge]
	conflictstyle = zdiff3
[pull]
	rebase = true
[push]
	default = simple
	autoSetupRemote = true
	followTags = true
[rebase]
	autoSquash = true
	autoStash = true
	updateRefs = true
[rerere]
	enabled = true
	autoupdate = true

